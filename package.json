{
  "name": "neverust-ui-tests",
  "version": "0.1.0",
  "description": "Multi-device UI testing for Neverust P2P storage node",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:desktop": "playwright test --project=desktop-1080p-chromium",
    "test:mobile": "playwright test --project=iphone-15 --project=pixel-7",
    "test:tablet": "playwright test --project=ipad-pro",
    "test:report": "playwright show-report",
    "test:codegen": "playwright codegen http://localhost:8080"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
